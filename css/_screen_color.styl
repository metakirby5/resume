c-bg = #fafafa
c-dark1 = #e0e0e0
c-dark2 = #bdbdbd
c-text = #212121

c-select = #d0d9ff
c-accent = #5677fc
c-accent-dark1 = #3b50ce
c-accent-dark2 = #2a36b1 

@media screen
  ::selection
    background c-select
  ::-moz-selection
    background c-select

  body
    background-color c-bg 
    color c-text

    a
      color c-accent
      &:hover
        color c-accent-dark1

    kbd a
      color c-bg
      &:hover
        color c-dark0

    .card
      border 1px solid c-dark1

    .fa.stackee.inverse
      color c-bg 

    .github-fork-ribbon
      background-color c-accent 

    .btn-primary
      color c-bg
      background-color c-accent
      border-color c-accent-dark1
      &:hover, &:focus, &:active
        background-color c-accent-dark1
        border-color c-accent-dark2

    .btn-default
      color c-text
      background-color c-bg
      border-color c-dark1
      &:hover, &:focus, &:active
        background-color c-dark1
        border-color c-dark2
