@import '../node_modules/nib/index.styl'
@require '_vars.styl'
@require '_util.styl'
@require '_print.styl'
@require '_print_color.styl'
@require '_screen_color.styl'

// General
@media screen
  html
    font-size 14px

body
  font-size 1rem
  font-family 'Roboto',sans-serif

.fadeaway
  position fixed
  z-index 100
  pointer-events none
  width 100%
  height 100px
  transition all 0.25s

  for direction in top bottom
    &.{direction}
      {direction} 0
      background-image linear-gradient(direction, rgba(245, 245, 245, 1), rgba(245, 245, 245, 0))

  &.disable
    opacity 0

.container
  transition all 0.25s ease-out
  @media screen
    padding-top sec-margin

h4, .h4
  font-size 1.25rem

.card
  card-height = 200px

  overflow hidden
  z-index 5
  & > *
    display block
  @media screen and (min-width xs-break)
    width 100%
    display table
    & > *
      display table-cell

    &.uni-height
      height card-height

  @media screen
    margin-bottom (sec-margin / 2)
    &:last-of-type
      margin-bottom 0

  @media screen
    border 1px solid
    border-bottom 4px solid
    border-radius 3px

  transition all 0.25s ease-out
  &.prereveal
    opacity 0
    transform translateY(-(sec-margin))

  .card-img
    @media print
      display none
    height card-height
    @media screen and (min-width xs-break)
      height auto
      width 30%
      & + .card-content
        width 70%

    background-size cover
    background-repeat no-repeat
    background-position 50% 50%

    border-bottom 1px solid
    @media screen and (min-width xs-break)
      border-bottom none
      border-right 1px solid

  .card-content
    @media screen
      padding (sec-margin / 2) sec-margin

    .meta
      padding-bottom 3px
      border-bottom 1px solid

      clearfix()
      & > div
        @media screen
          width 100%
          text-align center
        @media screen and (min-width sm-break), print
          float left
          text-align left
          padding-right 5px
          &:last-of-type
            padding-right 0

    ul.main
      list-style square
      padding-left 30px

      &.list-unstyled
        list-style none outside none
        padding-left 0

      & > li
        padding 1px 0
        position relative

        & > div
          vertical-align text-top
          display inline-block

    table.main
      width 100%
      max-width 100%
      margin-bottom 0

      td
        vertical-align top
        padding 3px
        border none !important

li
  @media screen
    line-height 1.75rem 
  @media print
    line-height 1.5rem 

// Specific
#forkme
  .github-fork-ribbon-wrapper
    z-index 10

#header
  .contact
    @media screen and (min-width md-break), print
      margin-bottom 0
    margin-bottom (sec-margin / 3)

    .main-title
      @media screen and (min-width sm-break), print
        float left
      @media screen and (min-width md-break), print
        margin-bottom 0
      display block
      margin-top 0
      margin-bottom (sec-margin / 2)
      margin-right (sec-margin / 2)
      line-height 4.5rem
      font-size 4.5rem
      font-weight 100

    .contact-bullets
      white-space nowrap
      ul
        margin-right 10px
        @media screen and (min-width xs-break), print
          display inline-block
        @media screen and (min-width md-break), print
          margin-bottom 0
        margin-bottom (sec-margin / 2)

#about
  .card
    display block
    width initial
    .content
      display block
      width initial

#experience
  .card-content
    & > .meta
      @media screen and (min-width sm-break), print
        .name
          width 40%
        .role
          width 35%
        .date
          width 25%
          text-align right

#education
  .card-content
    & > .meta
      &.no-classes
        padding-bottom 0
        border-bottom none
      @media screen and (min-width sm-break), print
        .school
          width 40%
        .grades
          width 35%
        .dates
          width 25%
          text-align right
    .classes
      // Limit the amount of classes printed to top 4
      tr:nth-of-type(n+5)
        @media print
          display none

#projects
  .card-content
    & > .meta
      @media screen and (min-width sm-break), print
        .name
          width 40%
        .role
          width 30%
        .date
          width 30%
          text-align right
