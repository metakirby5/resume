@require '_vars.styl'
@require '_util.styl'
@require '_print.styl'
@require '_screen_color.styl'

// General
@media screen
  html
    font-size 14px

body
  font-size 1rem
  @media screen
    padding-top 20px

h4, .h4
  font-size 1.25rem

.table-label
  font-size 0.9rem
  font-weight bold 

.table
  font-size .8rem 
  @media screen
    font-size 1rem
  margin-bottom 0
  &.table-super-condensed
    & > thead, & > tbody, & > tfoot
      & > tr, & > th
        & > td
          padding 3px 10px

@media screen
  li
    line-height 1.75rem 

// Specific
#header
  .contact
    @media screen and (min-width md-break), print
      margin-bottom 0
    margin-bottom (sec-margin / 3)

    .main-title
      @media screen and (min-width sm-break), print
        display inline-block
      @media screen and (min-width md-break), print
        margin-bottom 0
      display block
      margin-top 0
      margin-bottom (sec-margin / 2)
      margin-right 20px
      line-height 5rem
      font-size 4.75rem
      font-weight 100

    ul
      @media screen and (min-width md-break), print
        margin-bottom 0
      margin-bottom sec-margin 

#experience
  table
    tr
      &.meta
        .date
          text-align right

#education
  table
    tbody
      &.meta
        & + tbody
          border-top 0
        & td > div
          display inline-block
          float left
          &.school
            width 40%
          &.grades
            width 30%
          &.dates
            width 30%
            text-align right
      &.classes
        .date
          width 120px
          text-align right

#projects
  table
    tr
      &.meta
        .date
          text-align right