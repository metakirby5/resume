xs-break = 768px

// Basics
body
  padding-top: 20px

hr
  margin 0

ul.inline
  @media only screen and (min-width: xs-break)
    display: inline-block
  margin-right: 10px

ul.fa-ul.list-inline>li
  @media only screen and (max-width: xs-break)
    display: block
  padding-right: 40px

// Specific styles
.main-title
  display: inline-block
  margin-top: 0
  margin-right: 20px

.forkme-box
  display: flex;
  justify-content: center; /* align horizontal */
  align-items: center; /* align vertical */
  a
    padding-left: 20px
    font-size: 2em
