@require '_vars.styl'
@require '_util.styl'
@require '_print.styl'
@require '_print_color.styl'
@require '_screen_color.styl'

// General
@media screen
  html
    font-size 14px

body
  font-size 1rem
  font-family 'Roboto' sans-serif

.container
  @media screen
    padding-top sec-margin

h4, .h4
  font-size 1.25rem

.table-label
  font-size 0.9rem
  font-weight bold 

.card
  overflow hidden
  @media screen and (min-width sm-break)
    width 100%
    display table

  @media screen
    margin-bottom (sec-margin / 2)
    &:last-of-type
      margin-bottom 0

  @media screen
    border 1px solid
    border-bottom 4px solid
    vendorize('border-radius', (3px))

  .card-img
    @media print
      display none
    @media screen and (min-width sm-break)
      display table-cell
      width 30%
    & + .card-content
      @media screen and (min-width sm-break)
        width 70%

    height 200px
    vendorize('background-size', (cover))
    background-repeat no-repeat
    background-position 50% 50%

    border-bottom 1px solid
    @media screen and (min-width sm-break)
      border-bottom none
      border-right 1px solid

  .card-content
    @media screen and (min-width sm-break)
      display table-cell
    @media screen
      padding (sec-margin / 2) sec-margin
      padding-top (sec-margin / 2)

    .meta
      padding-bottom 3px
      border-bottom 1px solid

      clearfix()
      & > div
        @media screen
          width 100%
          text-align center
        @media screen and (min-width xs-break), print
          float left
          text-align left
          padding-right 5px
          &:last-of-type
            padding-right 0

    ul.main
      list-style square
      padding-left 30px

      &.list-unstyled
        list-style none outside none
        padding-left 0

      & > li
        padding 1px 0
        position relative

        & > div
          vertical-align text-top
          display inline-block

.img-thumbnail
  margin-bottom (sec-margin / 2)

li
  @media screen
    line-height 1.75rem 
  @media print
    line-height 1.5rem 

// Specific
#header
  .contact
    @media screen and (min-width md-break), print
      margin-bottom 0
    margin-bottom (sec-margin / 3)

    .main-title
      @media screen and (min-width sm-break), print
        float left
      @media screen and (min-width md-break), print
        margin-bottom 0
      display block
      margin-top 0
      margin-bottom (sec-margin / 2)
      margin-right (sec-margin / 2)
      line-height 4.5rem
      font-size 4.5rem
      font-weight 100

    .contact-bullets
      white-space nowrap
      ul
        margin-right 10px
        @media screen and (min-width xs-break), print
          display inline-block
        @media screen and (min-width md-break), print
          margin-bottom 0
        margin-bottom (sec-margin / 2)

#about
  .card
    display block
    width initial
    .content
      display block
      width initial

#experience
  .card-content
    & > .meta
      @media screen and (min-width xs-break), print
        .name
          width 40%
        .role
          width 35%
        .date
          width 25%
          text-align right

#education
  .card-content
    & > .meta
      @media screen and (min-width xs-break), print
        .school
          width 40%
        .grades
          width 35%
        .dates
          width 25%
          text-align right
    & > ul.main > li
      clearfix()
      div
        float left
      .name
        width 20%
      .content
        width 65%
      .date
        width 15%
        text-align right

#projects
  .card-content
    & > .meta
      @media screen and (min-width xs-break), print
        .name
          width 40%
        .role
          width 30%
        .date
          width 30%
          text-align right
