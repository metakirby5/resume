@require '_vars.styl'
@require '_util.styl'
@require '_print.styl'
@require '_print_color.styl'
@require '_screen_color.styl'

// General
@media screen
  html
    font-size 14px

body
  font-size 1rem
  font-family 'Roboto' sans-serif

.container
  @media screen
    padding-top sec-margin

h4, .h4
  font-size 1.25rem

.table-label
  font-size 0.9rem
  font-weight bold 

.card-holder
  &:nth-of-type(n - 1)
    @media screen
      padding-bottom (sec-margin / 2)

  .card
    overflow hidden

    @media screen
      border-bottom 3px solid
      vendorize('border-radius', (2px))
      vendorize('box-shadow', (-2px 2px 10px 2px #EEEEEE))

    .card-img-holder
      overflow hidden
      max-height 200px
      @media screen and (min-width sm-break)
        max-height auto

      border-bottom 1px solid
      @media screen and (min-width sm-break)
        border-bottom none
        border-right 1px solid

      .card-img
        margin-top -100px
        @media screen and (min-width sm-break)
          margin-top 0

    .card-content
      @media screen
        padding (sec-margin / 2) sec-margin

      .meta
        padding 3px 0
        border-bottom 1px solid

        & > div
          vertical-align middle
          display inline-block
          padding-right 5px
          &:last-of-type
            padding-right 0

      ul.main
        list-style square
        padding-left 30px

        &.list-unstyled
          list-style none outside none
          padding-left 0

        & > li
          padding 1px 0
          position relative

          & > div
            vertical-align text-top
            display inline-block

.img-thumbnail
  margin-bottom (sec-margin / 2)

li
  @media screen
    line-height 1.75rem 
  @media print
    line-height 1.5rem 

// Specific
#header
  .contact
    @media screen and (min-width md-break), print
      margin-bottom 0
    margin-bottom (sec-margin / 3)

    .main-title
      @media screen and (min-width sm-break), print
        display inline-block
      @media screen and (min-width md-break), print
        margin-bottom 0
      display block
      margin-top 0
      margin-bottom (sec-margin / 2)
      margin-right 20px
      line-height 4.5rem
      font-size 4.5rem
      font-weight 100

    ul
      @media screen and (min-width md-break), print
        margin-bottom 0
      margin-bottom sec-margin 

#experience
  .card-content
    & > .meta
      .name
        width 40%
      .role
        width 30%
      .date
        width 30%
        text-align right

#education
  .card-content
    & > .meta
      .school
        width 40%
      .grades
        width 30%
      .dates
        width 30%
        text-align right
    & > ul.main > li
        .name
          width 17%
        .content
          width 68%
        .date
          width 15%
          text-align right

#projects
  .card-content
    & > .meta
      .name
        width 40%
      .role
        width 30%
      .date
        width 30%
        text-align right
