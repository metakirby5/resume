xs-break = 768px

// Basics
body
  padding-top 20px

hr
  margin 10px 0
  
.h-inline
  padding-right 10px

ul.inline
  @media only screen and (min-width xs-break)
    display inline-block
  margin-right 10px

ul.fa-ul.list-inline>li
  @media only screen and (max-width xs-break)
    display block
  padding-right 40px

.row
  @media only screen and (min-width xs-break)
    .col-left
      text-align left
    .col-center
      text-align center
    .col-right
      text-align right

td.date
  width 175px

kbd a
  color white
  &:hover
    color #CCCCCC

// Specific styles
.github-fork-ribbon
  background-color #4682EB 

.main-title
  display inline-block
  margin-top 0
  margin-right 20px

.college
  margin-bottom 5px