// Variables
xs-break = 768px

// Override print behavior
@media print
  body
    font-size 10px
    h1
      font-size 3rem
    h4, .h4
      font-size 1.5rem
  a:link:after, a:visited:after
    content ""
  for size in (1..12)
    .col-print-{size}
      width (size/12)*100% !important
      position relative
      min-height 1px
      padding-right 15px
      padding-left 15px

// Basics
body
  padding-top 20px

for size in (4..6)
  h{size}, .h{size}
    margin-top 0

hr
  margin 0 0 10px 0

.h-inline
  display inline-block
  padding-right 10px

ul
  &.inline
    @media screen and (min-width xs-break), print
      display inline-block
    margin-right 10px
 
  &.block-sm>li
    @media screen and (max-width xs-break - 1)
      display block

  &.fa-ul.list-inline>li
    padding-right 40px

.row
  @media screen and (min-width xs-break), print
    .col-left
      text-align left
    .col-center
      text-align center
    .col-right
      text-align right

table
  ul
    margin-bottom 0

kbd a
  color white
  &:hover
    color #CCCCCC

// Specific styles
.github-fork-ribbon
  background-color #4682EB 

.main-title
  display inline-block
  margin-top 0
  margin-right 20px

.json-button
  margin-bottom 10px

.college
  margin-bottom 5px

#skills
  li
    margin-bottom 5px