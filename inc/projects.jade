section#projects
  +h4-i('Projects', 'fa-pencil')
  div(data-bind="projects")
    .card-holder
      .card
        .row(data-bind="container")
          .col-md-3.hidden-xs.hidden-sm.hidden-print
            a(data-bind="url")
              img.card-img.img-responsive(data-bind="image")
          .col-xs-12.col-md-9.col-print-12
            .card-content
              .meta
                .name: a(data-bind="name")
                .role(data-bind="role")
                .date(data-bind="date")
              ul.main(data-bind="content")
                li(data-bind="value")
