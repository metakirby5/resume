doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="description", content="Ethan Chan's Resume")

    title(data-bind="fullname")

    // Stylesheets
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="css/vendor/font-mfizz-1.2/font-mfizz.css")
    link(rel="stylesheet", href="css/vendor/gh-fork-ribbon.css")
    link(rel="stylesheet", href="css/main.css")

  body.container

    #forkme.hidden-print
      .github-fork-ribbon-wrapper.right
        // Google blue hehe
        .github-fork-ribbon
          a(href="https://github.com/metakirby5/resume") Fork me on GitHub!

    #header
      .row
        .col-xs-12.col-md-8.col-lg-7.col-print-12
          .row
            .col-xs-12
              h1.main-title(data-bind="fullname")
              ul.fa-ul.inline
                li
                  i.fa-li.fa.fa-lg.fa-phone
                  a(data-bind="phone")
                li
                  i.fa-li.fa.fa-lg.fa-envelope
                  a(data-bind="email")
              ul.fa-ul.inline
                li
                  i.fa-li.fa.fa-lg.fa-home
                  span(data-bind="addr1")
                  br
                  span(data-bind="addr2")
                  br
            .col-xs-12
              ul.fa-ul.inline.list-inline.block-sm
                li
                  i.fa-li.fa.fa-lg.fa-link
                  a(data-bind="website" data-extra="link")
                li
                  i.fa-li.fa.fa-lg.fa-github
                  a(data-bind="github" data-extra="link")
                li
                  i.fa-li.fa.fa-lg.fa-linkedin
                  a(data-bind="linkedin" data-extra="link")
        .col-xs-12.col-md-3.col-lg-4.hidden-print
          a.btn.btn-primary.btn-md.btn-block(onclick="window.print()")
            | Print me?
          a.btn.btn-default.btn-md.btn-block.json-button(href="data/data.json")
            | Want the JSON?

    hr
    
    #about
      .h-inline.h4 Who am I?
      span(data-bind="tagline")

    #education
      h4 Education
      div(data-bind="education")
        .row
          .col-xs-12.col-sm-4.col-print-4.col-left
            label(data-bind="school")
          .col-xs-12.col-sm-4.col-print-4.col-center
            label(data-bind="grades")
          .col-xs-12.col-sm-4.col-print-4.col-right
            label(data-bind="dates")
        .table-responsive
          table.table.table-striped.table-condensed
            tbody(data-bind="classes")
              tr
                td(data-bind="name")
                td(data-bind="content")
                td(data-bind="date" align="right")

    #experience
      h4 Experience
      .table-responsive
        table.table.table-striped.table-condensed
          tbody(data-bind="experience")
            tr
              td(data-bind="name")
              td(data-bind="role")
              td(data-bind="date" align="right")
            tr
              td(colspan="3")
                ul.list-unstyled(data-bind="content")
                  li(data-bind="value")

    #skills
      .h-inline.h4 Skills:
      ul.fa-ul.inline.list-inline(data-bind="skills")
        li
          i.fa-li.fa.fa-lg(data-bind="icon")
          span(data-bind="name")

    #projects
      h4 Projects
      .table-responsive
        table.table.table-striped.table-condensed
          tbody(data-bind="projects")
            tr
              td(data-bind="name")
              td(data-bind="role")
              td(data-bind="date" align="right")
            tr
              td(colspan="3")
                ul.list-unstyled(data-bind="content")
                  li(data-bind="value")

    #organizations
      .h-inline.h4 Organizations:
      ul.inline.list-inline.block-sm(data-bind="organizations")
        li(data-bind="namedate")

    #credits.hidden-print
      .h-inline.h4 Thanks to:
      ul.inline.list-inline(data-bind="credits")
        li
          a(data-bind="entry")
       
    // jQuery CDN
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    // jQuery local fallback
    script.
      window.jQuery || document.write('<script src="js/vendor/jquery-2.1.1.min.js"><\\/script>');

    // Bootstrap JS CDN
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    // Bootstrap JS local fallback
    script.
      if(typeof($.fn.modal) === 'undefined')
        document.write('<script src="js/vendor/bootstrap.min.js"><\\/script>');

    // Bootstrap CSS local fallback
    script.
      $(function() {
        var bodyColor = $('body').css('color');
        if(bodyColor != 'rgb(51, 51, 51)') {
          $("head").prepend('<link rel="stylesheet" href="css/vendor/bootstrap.min.css">');
        }
      });

    script(src="js/vendor/transparency.min.js")
    script(src="js/plugins.js")
    script(src="js/main.js")
